{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "userId": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "plan": {
      "type": "string"
    },
    "amount": {
      "type": "decimal"
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "PayPal",
        "Razorpay",
        "UPI",
        "Card"
      ]
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Success",
        "Failed",
        "Pending"
      ]
    },
    "transactionId": {
      "type": "string"
    },
    "timestamp": {
      "type": "datetime"
    }
  }
}
